<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.baofeng.blog.mapper.admin.ImageMapper">
    <resultMap id="ImageResultMap" type="com.baofeng.blog.entity.admin.Image">
        <id property="id" column="id"/>
        <result property="filePath" column="file_path"/>
        <result property="fileName" column="file_name"/>
        <result property="fileSize" column="file_size"/>
        <result property="mimeType" column="mime_type"/>
        <result property="createdBy" column="created_by"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <resultMap id="ArticleImagesMap" type="com.baofeng.blog.entity.admin.ArticleImage">
        <id property="id" column="id"/>
        <result property="articleId" column="article_id"/>
        <result property="imageId" column="image_id"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="getImageById" resultMap="ImageResultMap">
        SELECT * FROM images WHERE id = #{id}
    </select>

    <select id="getImageIdByfilePath">
        SELECT id FROM images WHERE file_path = #{filePath}
    </select>

    <insert id="insertImage" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO images (
            file_path, file_name, file_size, mime_type, created_by, created_at, updated_at
        )
        VALUES(
            #{filePath}, #{fileName}, #{fileSize}, #{mimeType},
            #{createdBy}, NOW(), NOW()
        )
    </insert>
    <insert id="insertArticleImage" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO article_images (
            article_id, image_id, created_at, updated_at
        )
        VALUES(
            #{articleId}, #{imageId}, NOW(), NOW()
        )
    </insert>

    <update id="updateImageSelective">
        UPDATE images 
        <set>
            <if test="filePath != null">
                file_path = #{filePath},
            </if>
            <if test="fileName != null">
                file_name = #{fileName},
            </if>
            <if test="fileSize != null">
                file_size = #{fileSize},
            </if>
            <if test="mimeType != null">
                mime_type = #{mimeType},
            </if>
            <if test="createdBy != null">
                created_by = #{createdBy},
            </if>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
            <if test="updatedAt != null">
                updated_at = #{updatedAt},
            </if>
            updated_at = NOW()
        </set>
        WHERE id = #{id}
    </update>
    
    <delete id="deleteImage">
        DELETE FROM images WHERE id = #{id}
    </delete>
</mapper>