<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.baofeng.blog.mapper.admin.ImageMapper">
    <resultMap id="ImageResultMap" type="com.baofeng.blog.entity.admin.Image">
        <id property="id" column="id"/>
        <result property="articleId" column="article_id"/>
        <result property="filePath" column="file_path"/>
        <result property="fileName" column="file_name"/>
        <result property="fileSize" column="file_size"/>
        <result property="mimeType" column="mime_type"/>
        <result property="isCover" column="is_cover"/>
        <result property="sortOrder" column="sort_order"/>
        <result property="createdBy" column="created_by"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="getImageById" resultMap="ImageResultMap">
        SELECT * FROM article_images WHERE id = #{id}
    </select>
    <select id="getArticleCoverId">
        SELECT id FROM article_images WHERE article_id = #{articleId} AND is_cover = 1
    </select>
    <insert id="insertImage" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO article_images(
            article_id, file_path, file_name, file_size,mime_type,
            is_cover,sort_order,created_by,created_at, updated_at)
        VALUES(
            #{articleId}, #{filePath},#{fileName},#{fileSize},#{mimeType},
            #{isCover},#{sortOrder},#{createdBy},NOW(), NOW())
    </insert>

    <update id="updateImageSelective">
        UPDATE article_images
        <set>
            <if test="articleId != null">
                article_id = #{articleId},
            </if>
            <if test="filePath != null">
                file_path = #{filePath},
            </if>
            <if test="fileName != null">
                file_name = #{fileName},
            </if>
            <if test="fileSize != null">
                file_size = #{fileSize},
            </if>
            <if test="mimeType != null">
                mime_type = #{mimeType},
            </if>
            <if test="isCover != null">
                is_cover = #{isCover},
            </if>
            <if test="sortOrder != null">
                sort_order = #{sortOrder},
            </if>
            <if test="createdBy != null">
                created_by = #{createdBy},
            </if>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
            <if test="updatedAt != null">
                updated_at = #{updatedAt},
            </if>
            updated_at = NOW()
        </set>
        WHERE id = #{id}
    </update>
    
    <delete id="deleteImage">
        DELETE FROM article_images WHERE id = #{id}
    </delete>
</mapper>